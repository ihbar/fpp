#!/bin/bash

BINDIR=$(dirname $0)
. ${BINDIR}/common

if [ "x$1" = "x" ]
then
	echo "USAGE: $0 PLUGINNAME GITURL"
	exit 1
fi

logOutput

echo "Installing plugin $1"
if [ "x${FPPDIR}" = "x/opt/fpp" ] && [ "x${SETTINGSFILE}" = "x/home/pi/media/settings" ]
then
	cd ${FPPDIR}/plugins && sudo git clone $2 $1
elif [ "x${FPPDIR}" = "x/home/pi" ]
then
	cd ${FPPDIR}/plugins && sudo -u pi git clone $2 $1
else
	cd ${FPPDIR}/plugins && git clone $2 $1
fi

if [ -x "${FPPDIR}/plugins/$1/fpp_install.sh" ]
then
	${FPPDIR}/plugins/$1/fpp_install.sh
fi

